{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "main",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/main.py",
                "${input:n}",
                "\"${input:choices}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "test",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/tests.py",
                "\"${input:display_on}\""
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ],
    "inputs": [
        {
            "id": "n",
            "description": "Best out of how many?",
            "options": ["3","10", "25", "500", "10000", "200000000"],
            "type": "pickString"
        },
        {
            "id": "choices",
            "description": "List your choices joined by the separator",
            "default": "yes;no;maybe",
            "type": "promptString"
        },
        {
            "id": "display_on",
            "description": "Display error messages?",
            "options": ["0", "1"],
            "type": "pickString"
        }
    ]
}